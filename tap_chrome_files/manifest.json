{
  "manifest_version": 2,

  "name": "time and punishment",
  "description": "This extension will shame you by pun if you slack off",
  "version": "1.0",

  "browser_action": 
  {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "background":
  {
  "page": "eventPage.html",
  "persistent":false
  },

  "permissions": 
  [
  "alarms",
  "history"
   ]

}
